@{
    ViewData["Title"] = "我的班级";
}
<div class="container">
    <div class="container row">
        <div class="col col-auto">
            <img id="UserHImg" src="#" width="64" height="64" alt="" />
        </div>
        <div class="col">
            <h5 id="UserID">加载中...</h5>
            <h6>查看班里的学生</h6>
        </div>
    </div>
    <div class="container">
        <hr />
        <p>我的班级：@ViewData["ClassName"].ToString()</p>
        <p id="totalNum">坐校车学生人数：正在加载</p>
        <div id="StudentIDs" style="font-size:small">
            <div class="row">
                <div class="col">学生姓名</div>
                <div class="col">离校签到</div>
                <div class="col">到家签到</div>
                <div class="col">返校签到</div>
            </div>
            <hr />
        </div>
    </div>
</div>
<script>
    {
        //var ChildCount = decodeURI("Uri.EscapeUriString(ViewData["ChildCount"].ToString())");
        document.getElementById("UserID").innerHTML = "你好，" + wbWeb.CurrentUser.RealName;
        $("#UserHImg").prop("src", "https://res.lhy0403.top/WBUserHeadImg/" + wbWeb.CurrentUser.HeadImagePath);

        var ClassID = "@Html.Raw(ViewData["ClassID"])"

        var data = wbWeb.GetClassStudents(ClassID);
        $("#totalNum").text("坐校车学生人数：" + data.Count + "人");
        for (var i = 0; i < data.Count; i++) {
            var TMP = data.StudentList[i];
            var Came = TMP.CHChecked;
            var Leaved = TMP.LSChecked;
            var CHome = TMP.LHChecked;
            var fff =
                "<div id='" + TMP.ObjectId + "' class=\"row\">" +
                "<div class=\"col text-underline\">" + "<a href=\"/BusManager/ViewStudent?StudentID=" + TMP.ObjectId + "&ClassID=" + TMP.ClassID + "&from=ClassManager&BusID=" + TMP.BusID + "\">" + TMP.StudentName + "</a></div>" +
                "<div class=\"col\"\">" + (Leaved ? "完成😊" : "&nbsp;❌") + "</div>" +
                "<div class=\"col\">" + (CHome ? "完成😊" : "&nbsp;❌") + "</div>" +
                "<div class=\"col\">" + (Came ? "完成😊" : "&nbsp;❌") + "</div>";
            $("#StudentIDs").append(fff);
            $("#StudentIDs").append("<br />");
        }
    }
</script>
