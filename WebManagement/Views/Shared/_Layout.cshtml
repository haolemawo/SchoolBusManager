@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="WoodenBench Platform for Schoolbus" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"]-@XConfig.Messages["TitlePart"]</title>

    @Html.Raw(JavaScriptSnippet.FullScript)

    <script src="https://res.wx.qq.com/open/js/jweixin-1.3.2.js" type="text/javascript"></script>
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="~/dev/css/bootstrap-reboot.css" asp-append-version="true" />
        <link rel="stylesheet" type="text/css" href="~/dev/css/WBWeb.css" asp-append-version="true" />
        <link rel="stylesheet" type="text/css" href="~/dev/css/bootstrap.css" asp-append-version="true" />

        <script src="~/dev/js/lib/jquery.js" asp-append-version="true"></script>
        <script src="~/dev/js/Crypto-Js/crypto-js.js" asp-append-version="true"></script>
        <script src="~/dev/js/lib/bootstrap.js" asp-append-version="true"></script>
        <script src="~/dev/js/service.js" asp-append-version="true"></script>
    </environment>

    <link rel="stylesheet" href="~/css/materialdesign.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/pretty.css" asp-append-version="true" />

    <environment exclude="Development">
        <link href="~/css/WBWeb.min.css" rel="stylesheet" asp-append-version="true" />
        <script src="~/js/library.min.js" asp-append-version="true"></script>
        <script src="~/js/crpto-js.min.js" asp-append-version="true"></script>
        <script src="~/js/service.min.js" asp-append-version="true"></script>
    </environment>
    <script src="/api/CurrentUserConfig.js" asp-append-version="false"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="Headernav">
        <div class="container-fluid">
            <a id="PgTitleBar" asp-controller="@((string)ViewData["where"])" asp-action="Index" class="navbar-brand">@((string)ViewData["where"] == "Home" ? XConfig.Messages["HomePageWithLogo"] : XConfig.Messages["BackToHomePageWithLogo"])</a>
            <button type="button" id="navBar01_btn" class="navbar-toggler collapsed" data-toggle="collapse" data-target="#navBar01" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navBar01">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item" id="home"><a class="nav-link" asp-controller="Home" asp-action="Index">@XConfig.Messages["HomePage"]</a></li>
                    <li class="nav-item" id="busmgr"><a class="nav-link" asp-controller="BusManager" asp-action="Index">@XConfig.Messages["BusManage"]</a></li>
                    <li class="nav-item" id="classmgr"><a class="nav-link" asp-controller="ClassManager" asp-action="Index">@XConfig.Messages["ClassManagement"]</a></li>
                    <li class="nav-item" id="mychild"><a class="nav-link" asp-controller="MyChild" asp-action="Index">@XConfig.Messages["MyChild"]</a></li>
                    <li class="nav-item" id="usermgr"><a class="nav-link" asp-controller="Account" asp-action="Index">@XConfig.Messages["MyAccount"]</a></li>
                    <li class="nav-item" id="bugreport"><a class="nav-link" asp-controller="Home" asp-action="@nameof(HomeController.ReportBugs)">@XConfig.Messages["ReportBug"]</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <script>
        function rm() { $("#otherOptions").remove(); }
        function removeOtherOperations(removeBtn) {
            setTimeout(rm, 500);
            if (removeBtn) { $("#navBar01_btn").remove(); }
        }
    </script>
    <div class="container">
        <br />
        @RenderSection("Scripts", required: false)
        @RenderBody()
    </div>
    @if (ViewBag.ShowOtherOptions ?? true)
    {
        <div id="otherOptions" class="container">
            <br />
            <br />
            <h6 class="container">@XConfig.Messages["YouMayAlsoWant"]</h6>
            <div class="center-margin container">
                <div class="row">
                    <div class="col center-margin">
                        <button class="btn btn-light btn-sm center-all" style="width: 90%" onClick="location.href = '/Home/ReportBugs';">@XConfig.Messages["ReportBug"]</button>
                    </div>
                    <div class="col center-margin">
                        <button class="btn btn-light btn-sm center-block" style="width: 90%" onClick="location.href = '/';">@XConfig.Messages["BackToHome"]</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <xnav class="xnav" id="xnav" style="font-size: 11px;" onclick="fx();"></xnav>
    <script>
        var _0 = 'Woodenbench for Schoolbus 2018 ~ 2020';
        var _1 = 'Copyright Leroy.H.Y 2018 ~ 2020';
        var _2 = 'Core Version: @WBConsts.CurrentCoreVersion';
        var _3 = 'Web Management Module Version: @Program.Version';
        var _4 = 'Build Branch: @(XConfig.Current.DevelopmentVersion ? "Development" : "Release")';
        var _c = 0, _m = 4;
        function fx() { $("#xnav").text(eval("_" + _c)); if (_c == _m) _c = 0; else _c++; }
    </script>
    <script id="_Remove">
        //RunOnce...
        $("#@ViewData["where"]").addClass("active");
        $("#_Remove").remove();
        fx();
    </script>
</body>
</html>
