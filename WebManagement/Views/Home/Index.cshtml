@{
    ViewData["Title"] = "主页";
    ViewBag.ShowOtherOptions = false;
}
<script>
    $("#navBar01").remove();
    $("#navBar01_btn").remove();    
</script>
<div class="container">
    <h5>@XConfig.Messages["Welcome"]</h5>
    <h6>@XConfig.Messages["PleaseChooseFunctions"]:</h6>
    <hr />
    <div id="ChosenAreas" class="center-margin">
        <table align="center">
            <tbody class="center-all text-center" style="border: solid, 1px, black">
                <tr>
                    <td onclick="Jummmmmmp('1');">
                        <img alt="@XConfig.Messages["BusManage"]" class="choose-square" style="height: 120px; width: 120px;" src="~/images/bus.png" />
                        <p class="text-underline" style="font-size:10pt">@XConfig.Messages["BusManage"]</p>
                    </td>
                    <td onclick="Jummmmmmp('2');">
                        <img alt="@XConfig.Messages["ClassManagement"]" class="choose-square" style="height: 120px; width: 120px;" src="~/images/class.png" />
                        <p class="text-underline" style="font-size:10pt">@XConfig.Messages["ClassManagement"]</p>
                    </td>
                </tr>
                <tr>
                    <td onclick="Jummmmmmp('3');">
                        <img alt="@XConfig.Messages["MyChild"]" class="choose-square" style="height: 120px; width: 120px;" src="~/images/child.svg" />
                        <p class="text-underline" style="font-size:10pt">@XConfig.Messages["MyChild"]</p>
                    </td>
                    <td onclick="Jummmmmmp('4');">
                        <img alt="@XConfig.Messages["MyAccount"]" class="choose-square" style="height: 120px; width: 120px;" src="~/images/myaccount.png" />
                        <p class="text-underline" style="font-size:10pt">@XConfig.Messages["MyAccount"]</p>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script>
    removeOtherOperations();
    function Jummmmmmp(t)
    {
        switch (t)
        {
            case '1':
                location.href = "\\BusManager\\";
                break;
            case '2':
                location.href = "\\ClassManager\\";
                break;
            case '3':
                location.href = "\\MyChild\\";
                break;
            case '4':
                location.href = "\\Account\\";
                break;
        }
    }
</script>