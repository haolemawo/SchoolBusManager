@{
    ViewData["Title"] = "反馈Bug";
}
<div class="container center-all">
    <h5>@XConfig.Messages["BugReport"]</h5>
    <hr>
    <label for="title">@XConfig.Messages["DescriptionOfProblem"]</label>
    <br>
    <input id="title" class="center-margin TxBox" style="width: 80%;" value="">
    <br>
    <br>
    <label for="content">@XConfig.Messages["DetailedContent"]</label>
    <br>
    <textarea id="content" class="center-margin"
              style="border-radius: 20px 20px 20px 20px; border:4px solid darkgray;
               width: 80%; height: 120px; padding: 5px">
	</textarea>
    <br>
    <button onclick="SubMitRpt();" class="center-margin btn btn-success btn-sm">&nbsp;&nbsp;@XConfig.Messages["Submit"]&nbsp;&nbsp;</button>
</div>
<script src="~/dev/js/lib/bmob.js"></script>
<script>
    Bmob.initialize("b770100ff0051b0c313c1a0e975711e6", "281fb4c79c3a3391ae6764fa56d1468d");
    function SubMitRpt() {
        var MainVar = new (Bmob.Object.extend("UserQuestions"))();
        MainVar.set("UserConfig", "OBSOLATED");
        MainVar.set("Title", $("#title").val());
        MainVar.set("Content", $("#content").val());
        MainVar.set("AdminRead", false);
        MainVar.save(null, {
            success: function (obj) {
                alert("提交成功，谢啦~~ \r\n现在你可以回到主页");
                location.href = "/";
            },
            error: function (error) {
                alert("提交出问题了……要不过会再试试？？");
            }
        });
    }
    removeOtherOperations();
</script>