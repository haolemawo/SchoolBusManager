@model WBPlatform.TableObject.UserChangeRequest

@{
    ViewData["Title"] = @XConfig.Messages["SubmotUCR"];
}
<div class="container">
    <h4>@XConfig.Messages["CreateUCR"]</h4>
    <h6>@XConfig.Messages["AfterUCRIsValidatedThenAbleToUse"]</h6>
    <hr />
    <div class="container">
        <form asp-action="RequestChange">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>@XConfig.Messages["DataToChange"]</label>
                <select id="selection" asp-for="RequestTypes" class="form-control">
                    @{
                        string[] p = Enum.GetNames(typeof(WBPlatform.StaticClasses.UserChangeRequestTypes));
                        foreach (string item in p)
                        {
                            <option>@item</option>
                        }
                    }
                </select>
            </div>
            <br />
            <div class="form-group">
                <label>@XConfig.Messages["Reason"]</label>
                <input type="text" asp-for="DetailTexts" class="form-control" />
                <span asp-validation-for="DetailTexts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@XConfig.Messages["NewContent"]</label>
                <input asp-for="NewContent" class="form-control" />
                <span asp-validation-for="NewContent" class="text-danger"></span>
            </div>
            <div class="form-group center-all row">
                <div class="col">
                    <button asp-action="RequestChange" type="submit" id="toBeHidden" style="width: 100%" class="btn btn-sm btn-success" onclick="setTimeout(function () { $('#toBeHidden').remove(); }, 100)">
                        @XConfig.Messages["Submit"]
                    </button>
                </div>
                <div class="col">
                    <button class="btn btn-sm btn-danger" style="width: 100%" asp-action="Index" onclick="$('#toBeHidden').remove();">@XConfig.Messages["Cancel"]</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script id="rm_">
    function rm() {
        $("#otherOptions").remove();
        $("#rm_").remove();
    }
    setTimeout(rm, 500);
</script>
